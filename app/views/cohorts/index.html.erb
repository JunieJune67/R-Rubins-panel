<h2 class="#" style="font-family: 'Julius Sans One', sans-serif;">Cohorts</h2>

<table class="table table-hover table-dark">
 <thead>
    <tr>
    <th>Cohort Name</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Cohort Profile</th>
    <th>Remove Cohort</th>
  </tr>
  </thead>
  </tbody>
<% @cohort.each do |cohort| %>
    <tr id="cohortpow-<%= cohort.id %>">
      <td><%= cohort.name %></td>
      <td><%= cohort.s_date %></td>
      <td><%= cohort.e_date %></td>
      <td class="table-learn"><a href="/cohorts/<%= cohort.id %>">View Cohort</a></td>
      <td class="table-learn" style="font-size: 1.5em; padding-left: 30px; align-items: center; vertical-align: middle;justify-content: center; display: flex;
      }">
        <%= link_to cohort_path(cohort.id), { method: :delete, data: {confirm: 'Are you sure?'}, :remote => true } do %>
        <%= image_tag("delete-button.svg" )   %>
        <% end %>
      </td>
    </tr>
    <% end %>
    </table>

    <br>

    <%= link_to root_path,  { class: 'btn btn-primary goback-button' } do %>
    <i class="fas fa-long-arrow-alt-left"></i> Back
    <% end %>