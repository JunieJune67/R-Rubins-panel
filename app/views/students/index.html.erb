<% @student.each do |stu| %>
    <tr id="stupow-<%= stu.id %>">
      <td><%= stu.first_name %></td>

      <td class="#"><%= stu.last_name %></td>
      <td class="table-learn"><%= stu.age %></td>
      <td class="table-learn"><%= stu.education %></td>
      
      <td class="table-learn"><a href="/students/<%= stu.id %>">View Student</a></td>
      <td class="table-learn" style="font-size: 1.5em; padding-left: 30px;    align-items: center; vertical-align: middle;justify-content: center; display: flex; }">
      <%= link_to student_path(stu.id), { method: :delete, data: {confirm: 'Are you sure?'}, :remote => true } do %>
       <%= image_tag("delete-button.svg" )   %>
       
      </td>
    </tr>
    <% end %>
    <% end %>
    </tbody>
</table>

